<%= simple_form_for(@dog) do |f| %>
  <%= f.input :name, input_html: {class: 'rounded-pill'} %>
  <%= f.association :breed, collection: Breed.all.order(:name), input_html: {class: 'select2'} %>
  <%= f.input :description, input_html: {class: 'rounded-pill'} %>
  <%= f.input :city, input_html: {class: 'rounded-pill'} %>
  <%= f.input :age, input_html: {class: 'rounded-pill'} %>
  <%= f.input :palmares, input_html: {class: 'rounded-pill'} %>
  <%= f.input :price_per_hour, input_html: {class: 'rounded-pill'} %>
  <%= f.input :profile_picture,as: :file %>
  <%= f.input :pictures,as: :file, input_html: {multiple: true } %>
  <%= f.button :submit, class: "btn btn-outline-success rounded-pill btn-block" %>
<% end %>

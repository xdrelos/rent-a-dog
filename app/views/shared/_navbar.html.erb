<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %> <strong>Rent a Dog</strong>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%=  active_link_to "Home", root_path, class: "nav-link", active: :exclusive %>
      </li>
      <li class="nav-item">
        <%= active_link_to "About us", about_path, class: "nav-link", active: :exclusive %>
      </li>
      <li class="nav-item">
        <%= active_link_to "Dogs", dogs_path, class: "nav-link", active: :exclusive %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= active_link_to "Add a Dog", new_dog_path, class: "nav-link", active: :exclusive %>
        </li>
        <li class="nav-item dropdown ml-3">
          <% if current_user.profile_picture.attached? %>
            <%= cl_image_tag current_user.profile_picture.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
           <%= image_tag "no-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end -%>
          <%= link_to "Welcome #{current_user.username}", "#", class: "no-links dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Rentings", rentings_my_rentings_path, class: "dropdown-item" %>
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-success rounded-pill ml-3" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary rounded-pill ml-3" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
